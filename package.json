{
	"name": "api",
	"module": "src/index.ts",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/guild-hub/api.git"
	},
	"scripts": {
		"build": "bun build src/index.ts --outdir dist --minify --target browser",
		"dev": "wrangler dev src/index.ts",
		"deploy": "wrangler deploy dist/index.js",
		"publish": "bun run build && bun run deploy",
		"lint": "biome lint src",
		"format": "biome format --write .",
		"prepare": "husky",
		"db:studio": "drizzle-kit studio --port 4000",
		"db:generate": "drizzle-kit generate:pg",
		"db:migrate": "bun run ./src/db/migrate.ts",
		"db:seed": "bun run ./src/db/seed.ts"
	},
	"dependencies": {
		"@discordjs/core": "1.1.1",
		"@discordjs/rest": "2.2.0",
		"@hono/zod-validator": "0.1.11",
		"@neondatabase/serverless": "0.9.0",
		"@paralleldrive/cuid2": "2.2.2",
		"@sapphire/discord-utilities": "3.2.2",
		"drizzle-orm": "0.29.4",
		"hono": "4.0.9",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.5.3",
		"@changesets/cli": "2.27.1",
		"@cloudflare/workers-types": "4.20240222.0",
		"@commitlint/cli": "19.0.3",
		"@commitlint/config-conventional": "19.0.3",
		"@types/bun": "latest",
		"drizzle-kit": "0.20.14",
		"husky": "9.0.11",
		"pg": "8.11.3",
		"wrangler": "3.31.0"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
